//Módulo 02 Exercício 15 Fila de banco
//O programa solicitará o ano de nascimento, calculará a idade do cliente, caso o cliente tiver a idade
//maior ou igual a 65 anos o programa exibirá a mensagem "ATENÇÃO DIRIJA-SE PARA FILA PREFERÊNCIAL!"
//Caso a idade seja menor que 65 anos exibirá a idade do cliente e a mensagem "Seja bem vindo(a) ao Banco EstudoNauta!".
//Autora: Fernanda de Almeida Guerra

programa
{
	inclua biblioteca Calendario --> c
	
	funcao inicio()
	{
		inteiro ano
	
		escreva ("Em que ano você nasceu? ")
		leia (ano)

		ano = c.ano_atual() - ano

		se ( ano >= 65 ){
			escreva ("\n\nVocê tem ", ano, " anos, certo? Seja bem vindo(a) ao Banco EstudoNauta!")
			escreva ("\n\n=====ATENÇÃO DIRIJA-SE PARA FILA PREFERÊNCIAL!=====") 
		}
		se (ano < 65 ){
			escreva ("\n\nVocê tem ", ano, " anos, certo? Seja bem vindo(a) ao Banco EstudoNauta!")
		}
		
		escreva ("\n\n")
		
	}
}