//Módulo 02 Exercício 21 Positivos e Negativo
//O programa solicitará ao usuário para digitar um número e o programa exibirá
//na tela se o número digitado é um número negativo, positivo ou um número
//nulo.
//Autora Fernanda de Almeida Guerra
programa
{
	
	funcao inicio()
	{
		inteiro num1
	
		escreva ("\nDigite o número: ")
		leia (num1)
		
		escreva ("\nO número ", num1, " é um número ")		
		se (num1 > 0) {
			escreva ("POSITIVO")
		}senao se (num1 < 0 ) {
			escreva ("NEGATIVO")
		}senao {
			escreva ("NULO")
		}
		escreva ("\n\n")	
	}
}